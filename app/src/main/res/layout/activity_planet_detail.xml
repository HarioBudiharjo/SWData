<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Detail.PlanetDetailActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
                android:text="name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="rotation_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="orbital_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="diameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="climate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="terrain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="surface_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/tvnama"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvrotation"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvorbital"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvdiameter"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvclimate"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvgravity"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvterrain"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvsurface"
                android:text="wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>